<h1>This is the Instructor (and Student?) Dashboard</h1>

<h4>You are logged in as: <%= session[:user_name] %> 
	<% if session[:is_instructor] %> [INSTRUCTOR] <% end %></h4>

<h2>Profile Data:</h2>
<h3>Name: <%= @user.f_name %> <%= @user.l_name %></h3>
<h3>Email: <%= @user.email %></h3>
<% if (@user.is_instructor) %>
	<h3>INSTRUCTOR</h3>
<% else %>
	<h3>STUDENT</h3>
<% end %>

<% if (@user.is_active) %>
	<h3>Status: ACTIVE</h3>
<% else %>
	<h3>Status: INACTIVE</h3>
<% end %>

