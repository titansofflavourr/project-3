<% if (session[:is_instructor]) %>

<div id="back-to-link">
	<%= link_to "Back to Dashboard", "/" %>
</div>

<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<div class="main-user">

			<div id="user-header">
				<h1>Create a New Cohort</h1>
			</div>
			<hr>


			<div id="center-user">
				<br><br>
				<div id="edit-user-text-input">
					<%= form_for @cohort, url: {action: "create"} do |f| %>
						
						<%= f.label :course_id, "Course:" %><br>
						<%= f.collection_select(:course_id, Course.all, :id, :name) %><br><br><br>
						<%= f.label :name, "Cohort Name" %><br>
						<%= f.text_field :name %><br>
						<%= f.label :start_date, "Start Date" %><br>
						<%= f.date_field :start_date %><br>
						<%= f.label :end_date, "End Date" %><br>
						<%= f.date_field :end_date %><br>
						<%= f.submit "Create", html: {class: "button"}  %>
					<% end %>
				</div>
				<div id="user-submit">
					
				</div>
				

			</div>
		</div>
	</div>
</div>

<% else %>

  <h3>This page is for instructors only</h3>

<% end %>
